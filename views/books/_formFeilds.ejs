<div class="form-row">
    <div class="form-item">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= book.title%>" placeholder="enter title" />
    </div>
    <div class="form-item">
        <label for="author">Author:</label>
        <select name="author" id="author">
            <% authors.forEach(author => { %>
            <option value="<%= author._id%>" <% author._id === book.author ? 'selected': '' %>><%= author.name%>
            </option>
            <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label for="publishDate">publish Date:</label>
        <input type="date" id="publishDate" name="publishDate"
            value="<%= book.publishDate == null ? '': book.publishDate.toISOString().split('T')[0]%>" />
    </div>
    <div class="form-item">
        <label for="pagesCount">Pages Count:</label>
        <input type="number" id="pagesCount" name="pagesCount" value="<%= book.pagesCount%>" min="1" />
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Book Cover:</label>
        <input type="file" id="cover" name="cover" class="filepond" />
    </div>
    <div class="form-item">
        <label for="description">Description:</label>
        <textarea name="description" id="description" rows="5"><%= book.description%></textarea>
    </div>
</div>