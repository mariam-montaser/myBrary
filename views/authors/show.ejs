<h2 class="page-header"><%= author.name%></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/authors/edit/<%= author._id%>">Edit</a>
    <%- include('../partials/deleteForm', {url: `/authors/${author._id}`}) %>
</div>
<% if(books.length > 0) { %>
<h2>Books By Author</h2>
<div>
    <% books.forEach(book => { %>
    <a href="/books/<%= book._id %>">
        <img height="150" width="100" src="<%= book.coverImagePath %>" alt="<%= book.title %>">
    </a>
    <% }) %>
</div>
<% } %>